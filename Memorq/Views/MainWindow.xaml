<Window x:Class="Memorq.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="../memorq.ico"
        Title="Memorq" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Images.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{StaticResource Menu_File}">
                <MenuItem Header="{StaticResource Menu_File_New}"/>
                <MenuItem Header="{StaticResource Menu_File_Open}"/>
                <MenuItem Header="{StaticResource Menu_File_Manager}"/>
                <Separator />
                <MenuItem Header="{StaticResource Menu_File_ImportExport}" />
                <Separator />
                <MenuItem Header="{StaticResource Menu_File_Exit}" Command="{Binding MenuFileExitCommand}"/>
            </MenuItem>
            <MenuItem Header="{StaticResource Menu_Edit}">
                <MenuItem Header="..." />
            </MenuItem>
            <MenuItem Header="{StaticResource Menu_Stats}">
                <MenuItem Header="..." />
            </MenuItem>
            <MenuItem Header="{StaticResource Menu_Options}">
                <MenuItem Header="..." />
            </MenuItem>
            <MenuItem Header="{StaticResource Menu_Help}">
                <MenuItem Header="{StaticResource Menu_Help_About}" Command="{Binding MenuHelpAboutCommand}">
                    <MenuItem.Icon>
                        <Image Source="Images/memorq.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Name="statusBar" Height="30" HorizontalContentAlignment="Stretch">
            <DockPanel LastChildFill="True"
                   Width="{Binding ActualWidth, ElementName=statusBar, Mode=OneWay}">
                <Label DockPanel.Dock="Right" Content="0 0 0" Width="110" Background="#FF9CD3BA" />
                <Label DockPanel.Dock="Left"  Content="test" Background="#FFE2C7C7" />

            </DockPanel>
        </StatusBar>

        <Grid DockPanel.Dock="Right" Width="110">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button x:Name="AddBtn" Grid.Row="0">
                <StackPanel>
                    <Image Source="{StaticResource AddBtn_right_img}" Width="32" Height="32"/>
                    <TextBlock Text="{StaticResource AddBtn_right}"></TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="NewBtn" Grid.Row="1" Content="{StaticResource NewBtn_right}"></Button>
            <Button x:Name="ForceBtn" Grid.Row="2" Content="{StaticResource ForceBtn_right}"></Button>
            <Button Command="{Binding OpenDebugWindowCommand}" Grid.Row="3">Debug</Button>
        </Grid>

        <Grid DockPanel.Dock="Left" Width="675">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Memorq 1.0.1"/>
            <Label Grid.Row="1" Content=" "/>
        </Grid>

    </DockPanel>
</Window>
