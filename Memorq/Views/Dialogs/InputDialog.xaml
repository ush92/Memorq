<Window x:Class="Memorq.Views.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memorq.Views.Dialogs"
        mc:Ignorable="d"
        Title="Memorq" Height="200" Width="400" ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=TextBox}">
    <Grid>
        <Label x:Name="Label" Content="Label" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="380" Height="32"/>
        <Label x:Name="VerificationLabel" Content="verify" Foreground="Red" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top" Width="380" Height="26"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="380" />
        <Button Click="OKBtnClick" Content="OK" HorizontalAlignment="Left" Margin="113,133,0,0" VerticalAlignment="Top" Width="67" />
        <Button Content="{StaticResource Cancel}" IsCancel="true" HorizontalAlignment="Left" Margin="200,133,0,0" VerticalAlignment="Top" Width="67" />
    </Grid>
</Window>
