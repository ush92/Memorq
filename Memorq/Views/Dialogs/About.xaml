<Window x:Class="Memorq.Views.Dialogs.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memorq.Views.Dialogs"
        mc:Ignorable="d"
        Title="{StaticResource Menu_Help_About}" Height="150" Width="300" ResizeMode="NoResize">

    <Window.InputBindings>
        <KeyBinding Command="{Binding CloseWindowCommand}" Key="Esc"/>
    </Window.InputBindings>

    <Grid>
        <Label Content="Memorq 1.0.1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Autor: Mateusz Trzyna" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Algorithm SM-2, © Copyright SuperMemo World, 1991" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" FontSize="9" Height="26"/>
        <Button Content="OK" IsCancel="True" HorizontalAlignment="Left" Margin="243,84,0,0" VerticalAlignment="Top" Width="26"/>
        <Image Source="/memorq.ico" HorizontalAlignment="Left" Height="60" Margin="179,10,0,0" VerticalAlignment="Top" Width="60"/>

    </Grid>
</Window>
