<Window x:Class="Memorq.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memorq.Views"
        mc:Ignorable="d"
        Icon="../Images/settings.png"
        Title="{StaticResource Menu_Options_Settings}" Height="175" Width="380" ResizeMode="NoResize">

    <Grid>
        <Button Content="OK" HorizontalAlignment="Left" Margin="103,87,0,0" VerticalAlignment="Top" Width="67" />
        <Button Content="{StaticResource Cancel}" IsCancel="true" HorizontalAlignment="Left" Margin="190,87,0,0" VerticalAlignment="Top" Width="67" />
        <CheckBox Content="{StaticResource Settings_ShowTimer}" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top" Width="322" Height="21">
        </CheckBox>
        <CheckBox Content="{StaticResource Settings_ReverseMode}" HorizontalAlignment="Left" Margin="19,46,0,0" VerticalAlignment="Top" Width="322" Height="21"/>
    </Grid>

</Window>
